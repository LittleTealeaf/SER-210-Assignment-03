<?xml version="1.0" encoding="utf-8"?>

<!--https://github.com/nex3z/FlowLayout maybe?-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"

            tools:context=".app.CharacterDetailsActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cd_image"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:id="@+id/cd_name"
                    android:fontFamily="casual"
                    android:layout_marginStart="@dimen/cd_margin"
                    android:layout_marginEnd="@dimen/cd_margin"
                    app:layout_constraintTop_toBottomOf="@id/cd_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:id="@+id/cd_name_alternates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/cd_name"
                    app:layout_constraintStart_toStartOf="@id/cd_name"
                    app:layout_constraintEnd_toEndOf="@id/cd_name"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:fontFamily="casual"
                    android:id="@+id/cd_house"
                    app:layout_constraintTop_toBottomOf="@id/cd_name_alternates"
                    app:layout_constraintStart_toStartOf="@id/cd_name"
                    app:layout_constraintEnd_toEndOf="@id/cd_name"
                    />

            <TextView
                    android:id="@+id/cd_actor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/cd_house"
                    app:layout_constraintStart_toStartOf="@id/cd_name"
                    app:layout_constraintEnd_toEndOf="@id/cd_name"
                    />
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#2b2b2b"
                    android:layout_margin="2dp"
                    android:id="@+id/cd_divider_1"
                    app:layout_constraintTop_toBottomOf="@id/cd_actor"
                    app:layout_constraintStart_toStartOf="@id/cd_name"
                    app:layout_constraintEnd_toEndOf="@id/cd_name"
                    />
            <TextView
                    android:id="@+id/cd_birthdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/cd_divider_1"
                    app:layout_constraintStart_toStartOf="@id/cd_name"
                    app:layout_constraintEnd_toEndOf="@id/cd_name"
                    />
            <TextView
                    android:id="@+id/cd_ancestry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/cd_birthdate"
                    app:layout_constraintStart_toStartOf="@id/cd_name"
                    app:layout_constraintEnd_toEndOf="@id/cd_name"
                    />
            <TextView
                    android:id="@+id/cd_patronus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="casual"
                    app:layout_constraintTop_toBottomOf="@id/cd_ancestry"
                    app:layout_constraintStart_toStartOf="@id/cd_name"
                    app:layout_constraintEnd_toEndOf="@id/cd_name"
                    />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</LinearLayout>
